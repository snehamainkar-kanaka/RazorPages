@page
@model RazorPages.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Index";
}

<style>
    .btn {
        width: 75px;
    }
    .imageThumbnail {
        height: 200px;
        width: auto;
    }
</style>

<h1>Employees</h1>

<div class="card-deck">
    @foreach (var employee in Model.employees)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "user2.png");
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>

            <img class="card-img-top imageThumbnail" src="@photoPath"
                 asp-append-version="true" />

            <div class="card-footer text-center">
                <a asp-page="/Employees/Details" class="btn btn-primary m-1" asp-route-ID="@employee.Id">View</a>
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>